# Ollama environment configuration
# Managed by Ansible - do not edit manually

# Where to store models (NVMe drive)
OLLAMA_MODELS={{ ollama_data_dir }}

# API bind address (0.0.0.0 for cluster access)
OLLAMA_HOST={{ ollama_host }}

# Number of parallel requests per model
OLLAMA_NUM_PARALLEL={{ ollama_num_parallel }}

# Maximum number of loaded models
OLLAMA_MAX_LOADED_MODELS={{ ollama_max_loaded_models }}

# Keep model in memory duration
OLLAMA_KEEP_ALIVE={{ ollama_keep_alive }}

# Flash attention for better memory efficiency
OLLAMA_FLASH_ATTENTION=1
